{
  "name": "diplomas-generator",
  "version": "1.4.10",
  "types": "dist/src/index.d.ts",
  "description": "A versatile tool for generating diplomas and certificates from a list of names, with support for customizable designs and output formats like JPG and PDF.",
  "repository": {
    "type": "git",
    "url": "https://github.com/flpmcruz/diplomas-generator.git"
  },
  "main": "dist/src/index.js",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js"
    }
  },
  "scripts": {
    "build": "tsc && npm run copyfiles",
    "copyfiles": "cp -R src/assets dist/src && cp readme.md dist",
    "copyassets": "cp -R src/assets node_modules/diplomas-generator/dist/src",
    "start": "node dist/src/example.js",
    "test": "jest -i",
    "test:watch": "jest -i --watch",
    "test:coverage": "jest -i --coverage"
  },
  "author": "Felipe Mireles Cruz",
  "license": "ISC",
  "dependencies": {
    "canvas": "^2.11.2",
    "pdfkit": "^0.14.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/pdfkit": "^0.13.4",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "diploma",
    "title",
    "generator",
    "pdf",
    "canvas",
    "diploma generator",
    "diploma creator",
    "certificate generator",
    "certificate creator",
    "diploma design",
    "certificate design",
    "diploma tool",
    "certificate tool",
    "diploma PDF",
    "certificate PDF",
    "names list generator",
    "names list processor"
  ]
}
