{
  "name": "diplomas-generator",
  "version": "1.0.12",
  "types": "dist/src/index.d.ts",
  "description": "This is a simple project to generate diplomas from a list of names and save them as a PDF file.",
  "repository": {
    "type": "git",
    "url": "https://github.com/flpmcruz/diplomas-generator.git"
  },
  "type": "module",
  "main": "dist/src/index.js",
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.js"
    }
  },
  "scripts": {
    "build": "tsc --declaration && npm run copy-files",
    "copy-files": "cp -R src/image src/data src/fonts dist/src",
    "start": "node dist/src/example.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "author": "Felipe Mireles Cruz",
  "license": "ISC",
  "dependencies": {
    "@colors/colors": "^1.6.0",
    "canvas": "^2.11.2",
    "pdfkit": "^0.14.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/pdfkit": "^0.13.4",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "keywords": [
    "diploma",
    "title",
    "generator",
    "pdf",
    "canvas"
  ]
}
